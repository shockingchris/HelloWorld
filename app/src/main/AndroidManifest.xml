<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chris.helloworld" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ActivityHello"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.chris.helloworld.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.example.chris.helloworld.ActivityHello"
            >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.chris.helloworld.ActivityHello" />
        </activity>

    </application>

</manifest>